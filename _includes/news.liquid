<div class="news">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    {% assign news = site.news | reverse %}
    {% assign max_items = 3 %}

    <div class="table-responsive">
      <table class="table table-sm table-borderless" id="news-table">
        {% for item in news %}
          <tr class="news-row" {% if forloop.index > max_items %}style="display: none;"{% endif %}>
            <th scope="row" style="width: 20%">{{ item.date | date: '[%b. %Y]' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>

      {% if news_size > max_items %}
        <div class="see-more text-right">
          <button id="toggle-news" class="btn btn-link p-0" style="color: var(--global-theme-color); font-weight: 500;">
            Show all
          </button>
        </div>
      {% endif %}
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const button = document.getElementById("toggle-news");
  if (!button) return;
  const rows = document.querySelectorAll("#news-table .news-row");

  button.addEventListener("click", function() {
    const hiddenRows = Array.from(rows).slice({{ max_items }});
    const isHidden = hiddenRows[0].style.display === "none";
    hiddenRows.forEach(r => r.style.display = isHidden ? "table-row" : "none");
    button.textContent = isHidden ? "Hide" : "Show all";
  });
});
</script>